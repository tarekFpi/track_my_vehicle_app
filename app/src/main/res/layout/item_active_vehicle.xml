<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <View
        android:id="@+id/view_rowTitle"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:visibility="visible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textView_serialNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1."
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginStart="8dp"
            android:gravity="start"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textView_TerminalAssignmentCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BST23364"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:gravity="start"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textView_CarrierRegistrationNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="DM GA 17-0623"
            android:gravity="end"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="3"/>


    </LinearLayout>

</RelativeLayout>