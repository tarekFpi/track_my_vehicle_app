<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/txtFeedbackIdPrefix"
            style="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="#"
            android:textColor="@color/colorTextSecondary" />

        <TextView
            android:id="@+id/txtFeedbackId"
            style="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/txtFeedbackIdPrefix"
            android:layout_toRightOf="@+id/txtFeedbackIdPrefix"
            android:textColor="@color/colorTextSecondary"
            tools:text="1468793393" />

        <TextView
            android:id="@+id/txtFeedback"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtFeedbackId"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:textColor="@color/colorTextPrimary"
            tools:text="HONDA VEZEL" />

        <TextView
            android:id="@+id/txtVrn"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtFeedback"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:textColor="@color/colorTextPrimary"
            tools:text="HONDA VEZEL" />

        <LinearLayout
            android:id="@+id/containerRaisedOn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtVrn"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true">

            <TextView
                style="@style/Base.TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:text="RAISED ON: "
                android:textColor="@color/colorTextPrimary" />

            <TextView
                android:id="@+id/txtRaisedOn"
                style="@style/Base.TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextSecondary"
                tools:text="HONDA VEZEL" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/containerSolvedOn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/containerRaisedOn"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true">

            <TextView
                style="@style/Base.TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:text="SOLVED ON: "
                android:textColor="@color/colorTextPrimary" />

            <TextView
                android:id="@+id/txtSolvedOn"
                style="@style/Base.TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextSecondary"
                tools:text="HONDA VEZEL" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/containerStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/containerSolvedOn"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true">

            <TextView
                style="@style/Base.TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:text="STATUS: "
                android:textColor="@color/colorTextPrimary" />

            <TextView
                android:id="@+id/txtStatus"
                style="@style/Base.TextAppearance.AppCompat.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorTextSecondary"
                tools:text="HONDA VEZEL" />
        </LinearLayout>

        <Button
            android:id="@+id/btnReply"
            style="@style/ButtonPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/containerStatus"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="16dp"
            android:textSize="14sp"
            android:text="SEE REPLIES" />

    </RelativeLayout>
</LinearLayout>