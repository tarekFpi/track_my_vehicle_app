<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="16dp">

    <TextView
        android:id="@+id/txtFeedbackIdPrefix"
        style="@style/Base.TextAppearance.AppCompat.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="#"
        android:textColor="@color/colorTextSecondary" />

    <TextView
        android:id="@+id/txtFeedbackId"
        style="@style/Base.TextAppearance.AppCompat.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/txtFeedbackIdPrefix"
        android:layout_toRightOf="@+id/txtFeedbackIdPrefix"
        android:textColor="@color/colorTextSecondary"
        tools:text="1468793393" />

    <TextView
        android:id="@+id/txtFeedback"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/txtFeedbackId"
        android:textColor="@color/colorTextPrimary"
        tools:text="HONDA VEZEL" />

    <LinearLayout
        android:id="@+id/containerRaisedOn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtFeedback">

        <TextView
            style="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="UPDATED ON: "
            android:textColor="@color/colorTextPrimary" />

        <TextView
            android:id="@+id/txtRaisedOn"
            style="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextSecondary"
            tools:text="HONDA VEZEL" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/containerSolvedOn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/containerRaisedOn">

        <TextView
            style="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="UPDATED BY: "
            android:textColor="@color/colorTextPrimary" />

        <TextView
            android:id="@+id/txtSolvedOn"
            style="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextSecondary"
            tools:text="HONDA VEZEL" />

    </LinearLayout>

</RelativeLayout>